<Window x:Class="TeamsAudioCapture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:TeamsAudioCapture.Properties"
        Title="Teams Audio Capture" Height="600" Width="800"
        Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="5,2"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸŽ™ï¸ Teams Audio Capture" FontSize="24" FontWeight="Bold" Foreground="#333"/>
            <TextBlock Text="{x:Static properties:Resources.MainSubtitleLiveApi}" Foreground="#666" FontSize="12"/>
            <CheckBox x:Name="ShowTranscriptRuntimeCheckBox"
                      Content="Show Transcript"
                      Margin="5,8,5,0"
                      Checked="ShowTranscriptRuntimeCheckBox_Changed"
                      Unchecked="ShowTranscriptRuntimeCheckBox_Changed"/>
        </StackPanel>
        
        <!-- Status Panel -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,10"
                BorderThickness="1" BorderBrush="#E0E0E0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" FontWeight="Bold"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="StatusText" Text="Ready" Foreground="#4CAF50"/>
                
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Device:" FontWeight="Bold"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DeviceText" Text="Not selected" TextWrapping="Wrap"/>
                
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Recording Time:" FontWeight="Bold"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="RecordingTimeText" Text="00:00:00"/>
                
                <TextBlock Grid.Row="3" Grid.Column="0" Text="File Size:" FontWeight="Bold"/>
                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="FileSizeText" Text="0 KB"/>
            </Grid>
        </Border>
        
        <!-- Audio Level Indicator -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,10"
                BorderThickness="1" BorderBrush="#E0E0E0">
            <StackPanel>
                <TextBlock Text="Audio Level:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ProgressBar x:Name="AudioLevelBar" Height="20" Minimum="0" Maximum="100" Value="0"
                            Background="#E0E0E0" Foreground="#4CAF50"/>
            </StackPanel>
        </Border>
        
        <!-- Gemini Response Area -->
        <Border Grid.Row="3" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,10"
                BorderThickness="1" BorderBrush="#E0E0E0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="{x:Static properties:Resources.MainLiveResponses}" FontWeight="Bold" FontSize="14"/>
                    <TextBlock x:Name="GeminiStatusText" Text="(Not connected)" Foreground="#999" Margin="10,0,0,0"/>
                </StackPanel>
                
                <ScrollViewer x:Name="GeminiResponseScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="GeminiResponseText" TextWrapping="Wrap" 
                              Text="{x:Static properties:Resources.MainResponsesPlaceholder}"
                              Foreground="#666" FontFamily="Consolas"/>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <!-- Control Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="StartButton" Click="StartButton_Click" Width="150">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â–¶ï¸" Margin="0,0,5,0"/>
                    <TextBlock Text="Start Recording"/>
                </StackPanel>
            </Button>
            <Button x:Name="StopButton" Click="StopButton_Click" Width="150" IsEnabled="False" 
                    Background="#F44336">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â¹ï¸" Margin="0,0,5,0"/>
                    <TextBlock Text="Stop Recording"/>
                </StackPanel>
            </Button>
            <Button x:Name="UploadFileButton" Click="UploadFileButton_Click" Width="150" 
                    Background="#FF9800">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“‚" Margin="0,0,5,0"/>
                    <TextBlock Text="Upload File"/>
                </StackPanel>
            </Button>
            <Button x:Name="SettingsButton" Click="SettingsButton_Click" Width="150" Background="#607D8B">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="âš™ï¸" Margin="0,0,5,0"/>
                    <TextBlock Text="Settings"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
