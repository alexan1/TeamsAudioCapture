<Window x:Class="TeamsAudioCapture.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="500" Width="550"
        Background="#F5F5F5"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="âš™ï¸ Settings" FontSize="20" FontWeight="Bold" Foreground="#333"/>
            <TextBlock Text="Configure Gemini Voice API" Foreground="#666" FontSize="12" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Gemini API Key Section -->
                <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,10"
                        BorderThickness="1" BorderBrush="#E0E0E0">
                    <StackPanel>
                        <TextBlock Text="ðŸ¤– Gemini API Configuration" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                        <TextBlock Text="API Key" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="ApiKeyTextBox" 
                                 Padding="8"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 Margin="0,0,0,10"/>

                        <TextBlock TextWrapping="Wrap" Foreground="#666" FontSize="11">
                            Get your API key from 
                            <Hyperlink NavigateUri="https://makersuite.google.com/app/apikey" RequestNavigate="Hyperlink_RequestNavigate">
                                Google AI Studio
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Recording Mode Section -->
                <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,10"
                        BorderThickness="1" BorderBrush="#E0E0E0">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ™ï¸ Recording Mode" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                        <CheckBox x:Name="SaveAudioCheckBox" Content="Save audio files to disk" 
                                  IsChecked="True" Margin="0,5,0,5" FontSize="13"/>
                        <CheckBox x:Name="ProcessWithGeminiCheckBox" Content="Process audio with Gemini API" 
                                  Margin="0,5,0,5" FontSize="13"/>

                        <TextBlock TextWrapping="Wrap" Foreground="#999" FontSize="11" Margin="0,10,0,0">
                            Note: You can enable both options to save and process simultaneously.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Audio Save Location Section -->
                <Border Background="White" CornerRadius="8" Padding="15"
                        BorderThickness="1" BorderBrush="#E0E0E0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ Audio Save Location" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                        <TextBlock Text="Save recordings to:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="SaveLocationTextBox" 
                                     Grid.Column="0"
                                     Padding="8"
                                     FontSize="12"
                                     Margin="0,0,10,0"
                                     IsReadOnly="True"/>
                            <Button Grid.Column="1" 
                                    Content="Browse..." 
                                    Click="BrowseButton_Click"
                                    Padding="15,8"
                                    Background="#607D8B"/>
                        </Grid>

                        <TextBlock TextWrapping="Wrap" Foreground="#999" FontSize="11" Margin="0,10,0,0">
                            Leave empty to use Desktop folder (default).
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" Click="CancelButton_Click" Background="#999" Width="100"/>
            <Button Content="Save" Click="SaveButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
