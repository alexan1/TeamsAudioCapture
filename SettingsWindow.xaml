<Window x:Class="TeamsAudioCapture.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="500"
        Background="#F5F5F5"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="⚙️ Settings" FontSize="20" FontWeight="Bold" Foreground="#333"/>
            <TextBlock Text="Configure Gemini Voice API" Foreground="#666" FontSize="12" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Settings Content -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15"
                BorderThickness="1" BorderBrush="#E0E0E0">
            <StackPanel>
                <TextBlock Text="Gemini API Key" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="ApiKeyTextBox" 
                         Padding="8"
                         FontFamily="Consolas"
                         FontSize="12"
                         Margin="0,0,0,10"/>
                
                <TextBlock TextWrapping="Wrap" Foreground="#666" FontSize="11">
                    Get your API key from 
                    <Hyperlink NavigateUri="https://makersuite.google.com/app/apikey" RequestNavigate="Hyperlink_RequestNavigate">
                        Google AI Studio
                    </Hyperlink>
                </TextBlock>
                
                <TextBlock TextWrapping="Wrap" Foreground="#999" FontSize="11" Margin="0,10,0,0">
                    Note: Your API key is stored locally in appsettings.Local.json and is not committed to git.
                </TextBlock>
            </StackPanel>
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" Click="CancelButton_Click" Background="#999" Width="100"/>
            <Button Content="Save" Click="SaveButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
